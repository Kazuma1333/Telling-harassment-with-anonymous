<div class="confirmPage">
  <div class='container'>
    <h1 class="confirmPage_title">Inquiry contents</h1>
    <%= form_with model: @ask, url: asks_thanks_path, method: :post, local: true do |f| %>
      <div class="confirmForm_item">
        <h3>Annoying people name </h3>
        <div>
          <%= f.hidden_field :name %>
          <%= @ask.name %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>The person's email</h3>
        <div>
          <%= f.hidden_field :email %>
          <%= @ask.email %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>Relation with the person</h3>
        <div>
          <%= f.hidden_field :relationship %>
          <%= @ask.relationship %>
        </div>
      </div>
      <div class="confirmForm_item">
        <h3>Something you wanto tell</h3>
        <div>
          <% if @ask.content.empty? %>
           Nothing especially
          <% else %>
           <%= @ask.content %>
          <% end%>
          <%= f.hidden_field :content %>
        </div>
      </div>
      <div class="text-center">
        <%= link_to "Back", root_path, class: "btn btn-info"%>
        <%= f.submit 'Submit', :class => 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>